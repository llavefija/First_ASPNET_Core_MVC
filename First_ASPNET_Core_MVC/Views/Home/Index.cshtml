@using First_ASPNET_Core_MVC.Models.ViewModels;
@model AnimalViewModel;

<h1 class="text-center mb-4 text-uppercase font-weight-bold text-primary">Lista de Animales</h1>

<div class="container my-4">
	<div class="row">
		@foreach (var animal in Model.Animales)
		{
			<div class="col-md-6 col-lg-4 mb-4">
				<form asp-action="DetailsAction" asp-controller="Home" method="get" class="text-center">
					<button type="submit" name="id" value="@animal.IdAnimal"
							class="btn btn-info btn-lg btn-block shadow-sm">
						@animal.NombreAnimal
					</button>
				</form>
			</div>
		}
	</div>
</div>

<form asp-action="AgregarAction" asp-controller="Home" method="get" class="text-center">
	<button type="submit" name="id" value="Ingresar un nuevo animal"
			class="btn btn-secondary btn-lg btn-block shadow-sm">
		Ingresar un nuevo animal
	</button>
</form>


<!-- Estilo CSS adicional para la presentación -->
<style>
	h1 {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		font-weight: 700;
		color: #007bff;
		text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
		letter-spacing: 1px;
		text-transform: uppercase;
		margin-bottom: 40px;
	}

	.container {
		padding: 20px;
	}

	.btn-primary {
		font-size: 18px;
		font-weight: 600;
		padding: 15px;
		border-radius: 8px;
		transition: transform 0.2s, box-shadow 0.2s;
	}

		.btn-primary:hover {
			transform: translateY(-5px);
			box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
		}

	.row {
		margin: 0;
	}

	.col-md-6 {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.col-lg-4 {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	/* Sombra y ajuste del tamaño del botón */
	.btn-block {
		width: 100%;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
	}
</style>
